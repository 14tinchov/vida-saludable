<div class="row">
  <div class="col-sm-12 col-md-12">
    <p id="notice">
      <%= notice%>
    </p>
  </div>
</div>

<div class="row">
  <div class="col-sm-12 col-md-12">
    <h1>Recetas</h1>
  </div>
</div>

<div class="row">
  <div class="col-sm-12 col-md-12">
    <div class="block-flat">
      <div class="header">
        <h3>Lista</h3>
      </div>
      <div class="content">
        <%- if @recipes.any? %>
          <table class="no-border">
            <thead class="no-border">
              <tr>
                <th>Nombre</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody class="no-border-x no-border-y">
              <%- @recipes.each do |recipe| %>
                <tr>
                  <td>
                    <%= recipe.name %>
                  </td>
                  <td>
                    <%= link_to 'Ver', admins_recipe_path(recipe) %>
                  </td>
                  <td>
                    <%= link_to 'Editar', edit_admins_recipe_path(recipe) %>
                  </td>
                  <td>
                    <%= link_to 'Eliminar', [:admins, recipe], method: :delete, data: { confirm: 'Â¿Estas Seguro?' } %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <div class="alert alert-info">
            <i class="fa fa-info-circle sign"></i>
            No hay postulaciones
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
