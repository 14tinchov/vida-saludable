<header id="header">
  <nav class="navbar navbar-default navbar-fixed-top navbar-sticky-function">
    <div class="container">
      <div class="logo-wrapper">
        <div class="logo">
          <%= link_to root_path do %>
            <img src="images/logo.png" alt="Logo" />
          <% end %>
        </div>
      </div>

      <div id="navbar" class="navbar-nav-wrapper navbar-arrow">
        <ul class="nav navbar-nav" id="responsive-menu">
          <li>
            <%= link_to "Recetas", root_path%>
          </li>
        </ul>
      </div>

      <div class="nav-mini-wrapper">
        <ul class="nav-mini sign-in">
          <% if current_user %>
            <li><%= link_to 'Mi perfil', users_profile_path %></li>
            <li><%= link_to 'Salir', destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to 'Entrar', new_user_session_path %></li>
            <li><%= link_to 'Registrarse', new_user_registration_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div id="slicknav-mobile"></div>
  </nav>
</header>
